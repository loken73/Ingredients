<form class="whole-reg-form">
    <div class="register-form step-1">
        <h2>Register</h2>
        <section>
            <div class="form-group log-reg-forms">
                <div class="glyphicon-wrapper"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                <input class="register-input form-control" type="text" placeholder="First Name" name="firstname">
            </div>
            <div class="form-group log-reg-forms">
                <div class="glyphicon-wrapper"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                <input class="register-input form-control" type="text" placeholder="Last Name" name="lastname">
            </div>
            <div class="form-group log-reg-forms">
                <div class="glyphicon-wrapper"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                <input class="register-input form-control" type="text" placeholder="Username" name="username">
            </div>
            <div class="button-wrapper"><button class="step-transitions next">Next <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></button></div>
        </section>
        <ul id="progressbar">
            <li><span class="glyphicon glyphicon-ok active" aria-hidden="true"></span></li>
            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></li>
        </ul>
    </div>
    <div class="register-form step-2">
        <h2>Register2</h2>
        <section>
            <div class="form-group log-reg-forms">
                <div class="glyphicon-wrapper"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></div>
                <input class="register-input form-control" type="email" placeholder="Email" name="email">
            </div>
            <div class="form-group log-reg-forms">
                <div class="glyphicon-wrapper"><i class="fas fa-unlock-alt glyphicon"></i></div>
                <input id="reg-password" class="register-input form-control" type="text" placeholder="Password" name="password">
            </div>
            <div class="form-group log-reg-forms">
                <div class="glyphicon-wrapper"><i class="fas fa-unlock-alt glyphicon"></i></div>
                <input class="register-input form-control" type="text" placeholder="Confirm Password" name="confirmpassword">
            </div>
            <div class="button-wrapper"><input type="submit" class="submit-register" value="Submit" /></div>
        </section>
        <ul id="progressbar">
            <li><span class="glyphicon glyphicon-ok active" aria-hidden="true"></span></li>
            <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></li>
        </ul>
    </div>
</form>